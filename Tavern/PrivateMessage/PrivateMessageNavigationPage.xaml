<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tavern.PrivateMessage.PrivateMessageNavigationPage"
             xmlns:local="clr-namespace:Tavern"
             Title="Private Messages">
    <Grid>
        <Image Source="../Resources/Images/tavern.png" Aspect="AspectFill" />
        <CollectionView x:Name="friendsList" SelectionMode="Single" SelectionChanged="ChatSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:OtherUser">
                    <Grid HeightRequest="100" Padding="5">
                        <Image Source="../Resources/Images/paper_login.jpg" Aspect="AspectFill"/>
                        <HorizontalStackLayout Padding="10">
                            <Label Text="{Binding Name}" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center"
                                   TextColor="Black" FontSize="24" FontFamily="Sedan"/>
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>