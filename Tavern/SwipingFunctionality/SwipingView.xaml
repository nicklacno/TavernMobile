<?xml version="1.0" encoding="utf-8" ?>
<SwipeView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tavern.SwipingFunctionality.SwipingView">
    <SwipeView.LeftItems>
        <SwipeItem
            x:Name="swipeLeft"
            Text="Skip"
            BackgroundColor="Red"
            Invoked="OnSkipGroup"
            />
    </SwipeView.LeftItems>
    <SwipeView.RightItems>
        <SwipeItem
            x:Name="swipeRight"
            Text="Request"
            BackgroundColor="Green"
            Invoked="OnJoinGroup"
            />
    </SwipeView.RightItems>
    <VerticalStackLayout>
        <Label
            x:Name="lbGroupName"
            Text="Test Group"
            />
        <Label
            x:Name="lbGroupBio"
            Text="Test Group Bio"
            />
        <Label
            x:Name="lbMemberCount"
            Text="Members: 0"
            />
        <VerticalStackLayout x:Name="stackTags">
            <Label>Tag1</Label>
            <Label>Tag2</Label>
        </VerticalStackLayout>
    </VerticalStackLayout>
</SwipeView>
