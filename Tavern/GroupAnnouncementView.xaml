<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tavern.GroupAnnouncementView">
    <ContentView.Resources>
        <StyleSheet Source="/Resources/Styles/PageStyles/Chat.css" />
    </ContentView.Resources>
    <VerticalStackLayout Padding="0,15" x:Name="stackAnnounce">
        <BoxView HeightRequest="1" Color="#77000000"/>
        <Label x:Name="lbChatHead" Text="Announcements" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" FontSize="24" FontFamily="Seagram"
           TextDecorations="Underline"/>
        <CollectionView x:Name="messageBox" 
                    IsGrouped="True" 
                    SelectionMode="None"
                    MinimumHeightRequest="200"
                    MaximumHeightRequest="150"
                    BindingContext="GroupAnnounementView"
                    >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="{Binding TimeSent}" WidthRequest="60" FontFamily="Seagram" FontSize="12" VerticalOptions="StartAndExpand"/>
                        <Label Text="{Binding Sender}" Padding="10, 0" FontFamily="Seagram" FontSize="16" VerticalOptions="StartAndExpand"/>
                        <Label Text="{Binding Body}" LineBreakMode="WordWrap" FontFamily="Seagram" FontSize="16"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate>
                    <Label Text="{Binding DateSent}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       FontFamily="Seagram" FontSize="16"
                       />
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>
            <CollectionView.EmptyView>
                <Label HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" FontFamily="Seagram" FontSize="16">No Announcements</Label>
            </CollectionView.EmptyView>
        </CollectionView>
        <HorizontalStackLayout x:Name="stackPost" HorizontalOptions="CenterAndExpand">
            <Editor x:Name="txtMessage" MaxLength="200" WidthRequest="250" TextColor="#77000000" Placeholder="Announcement" PlaceholderColor="#77000000" 
                FontFamily="Seagram" FontSize="16" />
            <Button x:Name="btnSendMessage" Text="Post" WidthRequest="150" Clicked="PostAnnounement" FontFamily="Seagram" FontSize="16"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
