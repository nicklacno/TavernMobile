<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tavern.ProfilePage"
             Title="ProfilePage"
             xmlns:n="clr-namespace:Tavern"
             Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles/PageStyles/ProfilePage.css" />
    </ContentPage.Resources>
    <Grid Padding="15">
        <Image Source="/Resources/Images/paper_login.jpg" Aspect="AspectFill" />
        <VerticalStackLayout VerticalOptions="Start">
            <Button x:Name="ProfileEdit" HorizontalOptions="End" Text="Edit Profile" Clicked="EditProfile"/>
            <Label 
                x:Name="Name"
                Text=""
                VerticalOptions="Center" 
                HorizontalOptions="Fill" 
                FontFamily="Algerian"
                />
            <Label
                x:Name="Bio"
                Text=""
                FontSize="25"
                HorizontalOptions="Fill" 
                MaxLines="10"
                FontFamily="Sedan"
                />
            <VerticalStackLayout x:Name="TagsList" Padding="10, 0">
                <Label HorizontalTextAlignment="Center" FontSize="24" FontFamily="Algerian">Tags</Label>
                <CollectionView x:Name="tagList" ItemsLayout="VerticalGrid, 2" MaximumHeightRequest="80" HorizontalOptions="CenterAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Label Text="{Binding Name}" HorizontalTextAlignment="Center" FontFamily="Sedan" FontSize="12"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="GroupList">
                <Label Text="Groups" FontFamily="Sedan" FontSize="24" TextDecorations="Underline"/>
                <Rectangle HorizontalOptions="Fill" HeightRequest="4" Opacity="0"/>
                <CollectionView x:Name="groupList" ItemsLayout="Vertical" MaximumHeightRequest="140" VerticalScrollBarVisibility="Always">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding Name}" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontFamily="Sedan"
                                   FontSize="20"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Label HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center">You are apart of no groups</Label>
                    </CollectionView.EmptyView>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="FriendsList">
                <Label Text="Friends" FontFamily="Sedan" FontSize="24" TextDecorations="Underline" />
                <Rectangle HorizontalOptions="Fill" HeightRequest="4" Opacity="0"/>
                <CollectionView x:Name="friendsList" ItemsLayout="Vertical" MaximumHeightRequest="140">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="n:OtherUser">
                            <Label Text="{Binding Name}" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontFamily="Sedan"
                                   FontSize="20"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>

</ContentPage>