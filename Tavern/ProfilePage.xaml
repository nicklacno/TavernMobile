<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tavern.ProfilePage"
             Title="ProfilePage">
    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles/PageStyles/ProfilePage.css" />
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label 
            x:Name="Name"
            Text="Abcdefghijklmnopqrst"
            VerticalOptions="Center" 
            HorizontalOptions="Fill" 
            HorizontalTextAlignment="Center"
            />
        <Label
            x:Name="Bio"
            Text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu, pretium quis, sem. Nulla consequat massa quis enim. Donec."
            VerticalOptions="Center"
            HorizontalOptions="Fill" 
            MaxLines="10"
            />
        <VerticalStackLayout x:Name="FriendsList">
            <Label>Friends</Label>
            <Rectangle HorizontalOptions="CenterAndExpand" HeightRequest="4"/>
            <Label StyleClass="friend">Test Friend</Label>
            <Label StyleClass="friend">Another Test Friend</Label>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>