<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:Tavern"
             x:Class="Tavern.TabbedMainPage"
             xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:swiping="clr-namespace:Tavern.SwipingFunctionality"
             android:TabbedPage.ToolbarPlacement="Bottom"
             android:TabbedPage.IsSwipePagingEnabled="False"
             >
    <TabbedPage.Style>
        <Style TargetType="TabbedPage">
            <Setter Property="BarTextColor" Value="white" />
            <Setter Property="UnselectedTabColor" Value="#331900"/>
            <Setter Property="SelectedTabColor" Value="white" />
            <Setter Property="BarBackgroundColor" Value="#230900" />
        </Style>
    </TabbedPage.Style>
    <local:HomePage Title="Home" IconImageSource="Resources/Images/home.png"/>
    <local:FindGroupPage Title="Find Groups" IconImageSource="Resources/Images/search.png"/>
    <local:ProfilePage Title="My Profile" IconImageSource="Resources/Images/user.png"/>
</TabbedPage>
