<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tavern.EditGroupPage"
             Title="Edit Group">
    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles/PageStyles/EditProfilePage.css" />
    </ContentPage.Resources>
    <Grid>
        <Image Source="/Resources/Images/paper_login.jpg" Aspect="AspectFill" />
        <ScrollView>
            <VerticalStackLayout Padding="10">
                <Button Text="Show Group Code" HorizontalOptions="CenterAndExpand" Clicked="RetrieveCode" BackgroundColor="#66000000" 
                        TextColor="White" FontFamily="Seagram" FontSize="24" WidthRequest="400" />
                <VerticalStackLayout x:Name="stackGroupname">
                    <Label FontFamily="Seagram">Group Name</Label>
                    <Entry
                        x:Name="entryUsername"
                        MaxLength="20"
                        FontFamily="Seagram"
                        />
                </VerticalStackLayout>
                <VerticalStackLayout x:Name="stackBio">
                    <Label FontFamily="Seagram">Bio</Label>
                    <Editor
                        x:Name="entryBio"
                        MaxLength="300"
                        AutoSize="TextChanges"
                        FontFamily="Seagram"
                        />
                </VerticalStackLayout>
                <HorizontalStackLayout>
                    <CheckBox x:Name="checkPrivate" HorizontalOptions="Start" VerticalOptions="StartAndExpand"/>
                    <Label Text="Private" FontFamily="Seagram" FontAttributes="Bold" VerticalOptions="EndAndExpand" VerticalTextAlignment="End" 
                           FontSize="16"/>
                </HorizontalStackLayout>
                <VerticalStackLayout x:Name="stackConfirm">
                    <Button
                        x:Name="btnConfirm"
                        Text="Save Changes"
                        Clicked="UpdateGroupInfo"
                        FontFamily="Seagram"
                        FontSize="20"
                        />
                </VerticalStackLayout>
                <CollectionView
                    x:Name="GroupTagsList"
                    SelectionMode="Multiple">
                    <CollectionView.Header>
                        <Label HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" FontSize="25" FontFamily="Seagram"
                               TextDecorations="Underline">Tags</Label>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding Name}"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center" 
                                FontFamily="Seagram"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.Footer>
                        <Button Text="Update Tags" HorizontalOptions="CenterAndExpand" Clicked="UpdateTagsList"/>
                    </CollectionView.Footer>
                </CollectionView>
                <VerticalStackLayout x:Name="RemovingMembers">
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>